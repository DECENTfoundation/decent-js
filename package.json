{
    "name": "decent-js",
    "version": "2.0.0",
    "description": "",
    "keywords": [
        "blockchain",
        "decent"
    ],
    "main": "lib/decent-js.js",
    "module": "lib/decent-js.js",
    "types": "dist/types/decent-js.d.ts",
    "author": "DECENT Foundation <info@decent.ch>",
    "repository": {
        "type": "git",
        "url": "https://github.com/DECENTfoundation/decent-js.git"
    },
    "directories": {
        "bin": "./dist",
        "lib": "./dist"
    },
    "license": "MIT",
    "engines": {
        "node": ">=8.0.0",
        "npm": ">=5.0.0"
    },
    "scripts": {
        "start": "tsc -w & webpack --config webpack.config.js --watch",
        "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
        "prebuild": "rimraf dist && rimraf lib",
        "build": "tsc && webpack --config webpack.config.js && typedoc --out dist/docs --target es6 --theme minimal --excludeExternals --includeDeclarations --excludePrivate --exclude \"{**/{api,mocks}/*.ts,**/crypt.ts}\" src",
        "generate-docs": " typedoc --out dist/docs --target es6 --theme minimal --excludeExternals --includeDeclarations --excludePrivate --exclude \"{**/{api,mocks}/*.ts,**/crypt.ts}\" src",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
        "prepush": "npm run test:prod && npm run build"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverage": true,
        "mapCoverage": true
    },
    "devDependencies": {
        "@types/concat-stream": "1.6.0",
        "@types/jest": "^21.1.0",
        "@types/node": "8.0.47",
        "colors": "^1.1.2",
        "cross-env": "5.1.1",
        "decentjs-lib": "git+ssh://git@github.com/DECENTfoundation/decentjs-lib",
        "jest": "21.2.1",
        "lodash.camelcase": "^4.3.0",
        "prompt": "^1.0.0",
        "replace-in-file": "^3.0.0-beta.2",
        "rimraf": "2.6.2",
        "ts-jest": "21.1.4",
        "tslint": "5.8.0",
        "typedoc": "^0.9.0",
        "typescript": "2.5.3",
        "webpack": "3.8.1"
    },
    "dependencies": {
        "bluebird": "3.5.1",
        "concat-stream": "1.6.0",
        "crypto-js": "3.1.9-1",
        "ipfs-api": "15.0.1",
        "moment": "2.18.1",
        "requirejs": "2.3.5",
        "ripemd160": "2.0.1",
        "rollup-plugin-node-globals": "1.1.0"
    },
    "prettier": {
        "tabWidth": 4
    }
}
